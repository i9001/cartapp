{
    "manifest_version": 3,
    "name": "Cart App",
    "description": "",
    "version": "0.1",
    "icons": {
        "16": "icon.png"
    },
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "source/contentscript.js"
            ],
            "run_at": "document_idle",
            "all_frames": false
        }
    ]
}