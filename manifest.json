{
    "manifest_version": 3,
    "name": "Amazon Fresh multiple carts",
    "description": "Amazon Fresh multiple shopping carts Web Extension",
    "version": "1.0",
    "homepage_url": "https://github.com/iiii7/cartapp",
    "icons": {
        "16": "icon.png"
    },
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.amazon.com/*"
            ],
            "js": [
                "source/contentscript.js"
            ],
            "run_at": "document_idle",
            "all_frames": false
        }
    ]
}